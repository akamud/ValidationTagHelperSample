@model ValidationTagHelperSample.Controllers.User
@{
    Layout = "_Layout";
}

<form asp-action="Create" asp-anti-forgery="true" class="newPerson well">
    <fieldset>
        <legend>Nova Pessoa</legend>
        <div class="form-horizontal">
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName1" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="UserName1" class="form-control" />
                    <span asp-validation-for="UserName1" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserName2" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="UserName2" class="form-control" />
                    <span asp-validation-for="UserName2" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="create" type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </fieldset>
</form>